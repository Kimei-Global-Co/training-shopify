{{ 'section-custom-banner.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Tiêu đề",
      "default": "Chào mừng đến cửa hàng!"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Ảnh nền"
    },
    {
      "type": "number",
      "id": "width",
      "label": "Width"
    },
    {
      "type": "number",
      "id": "height",
      "label": "Height"
    },
    {
    "type": "select",
    "id": "vertical_alignment",
    "label": "Vertical alignment",
    "options": [
      {
        "value": "left",
        "label": "Left"
      },
      {
        "value": "center",
        "label": "Center"
      },
      {
        "value": "right",
        "label": "Right"
      }
    ],
    "default": "center"
  }
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}

<div class="custom-banner {{ section.settings.vertical_alignment }}">
  <img
    src="{{ section.settings.image | img_url: 'large' }}"
    width="{{ section.settings.width }}"
    height="{{ section.settings.height }}"
    alt="Banner"
  >
  <h1>{{ section.settings.heading }}</h1>
</div>
