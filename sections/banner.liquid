{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Tiêu đề",
      "default": "Chào mừng đến cửa hàng!"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Ảnh nền"
    },
    {
      "type": "number",
      "id": "width",
      "label": "Width"
    },
    {
      "type": "number",
      "id": "height",
      "label": "Height"
    },
    {
    "type": "select",
  "id": "vertical_alignment",
  "label": "Vertical alignment",
  "options": [
    {
      "value": "top",
      "label": "Top"
    },
    {
      "value": "middle",
      "label": "Middle"
    },
    {
      "value": "bottom",
      "label": "Bottom"
    }
  ],
  "default": "middle"
}
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}

<div class="banner">
  <img src="{{ section.settings.image | img_url: 'large' }}" width="" height="" alt="Banner">
  <h1>{{ section.settings.heading }}</h1>
</div>
